{{#spritesheet}}
.sprite-{{name}}-background-image(){
  background-image: url({{escaped_image}});
}
.sprite-{{name}}-background-size(){
  background-size: {{px.width}} {{px.height}};
}
.sprite-{{name}}-background(){
  .sprite-{{name}}-background-image;
  .sprite-{{name}}-background-size;
}
.{{name}} {
  background-image: url({{escaped_image}});
}
{{/spritesheet}}
{{sort sprites}}
{{#sprites}}
.{{name}} {
  background-position: {{px.offset_x}} {{px.offset_y}};
  width: {{px.width}};
  height: {{px.height}};
}
{{/sprites}}
